<script>
    let ddmenu = document.querySelector(".ddmenu");
    let ddmenuButton = document.querySelector(".ddmenu-button");
    let ddlist = document.querySelector(".ddlist");

    ddmenu.addEventListener("mouseover", function(){
        ddlist.style.scale = "1";
    });

    ddmenu.addEventListener("mouseout", function(){
        ddlist.style.scale = "0";
    });

    ddmenuButton.addEventListener("pointerdown", function(){
        if(ddlist.style.scale === "0"){
            ddlist.style.scale === "1"
        } 

        if(ddlist.style.scale === "1"){
            ddlist.style.scale === "0"
        }
    })
</script>
